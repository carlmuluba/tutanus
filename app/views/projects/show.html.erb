 <%= render "shared/projects/topnav_fixed" %>
  <h5 class="uk-text-center uk-text-capitalize uk-text-muted uk-padding-remove uk-margin-remove">
   <%= @project.proj_title %>
  </h5>
  <div class="uk-text-center uk-margin-small-bottom">
  <a href=""  class="uk-link-text" uk-toggle="target: .proj-info; animation: uk-animation-fade;">about this project <span class="uk-margin-small-right" uk-icon="plus-circle"></span></a>
</div>
<div class="uk-margin-small-left uk-margin-small-right proj-info" hidden>
  <div class="uk-column-1-2@s uk-column-divider uk-margin-medium-top">
<p class="uk-dropcap ">
  <%= @project.proj_about %>
  </p>
</div>
<% if @project.teams.empty? %>
<!-- Nothing to show -->
<% else %>
<p>#Project teams</p>
<div class="uk-child-width-1-3@m uk-child-width-1-2@s uk-margin-small-bottom" uk-grid>
<% @project.teams.each do |proj_team| %> 
<div>
<%= link_to team_path(proj_team.id), class: "uk-link-text" do %>
<h6 class="uk-card-title uk-text-muted"><%= proj_team.tm_name %></h6>
<% end %>
</div>
<% end %>
</div>
<% end %>
</div>
<!-- #START IMAGES DISPLAY GRID --->
<div uk-lightbox="animation: fade">
  <%= link_to @project.proj_cover.url do %>
    <div class="uk-cover-container uk-height-viewport uk-margin-small-left uk-margin-small-right">
  <%= cl_image_tag(@project.proj_cover.url, alt: @project.proj_title,  "uk-cover" => "") %>
</div>
<% end %>
</div>
<div class="uk-margin-small-left uk-margin-small-right uk-margin-small">
    <div class="uk-grid-small uk-margin-small uk-child-width-1-3@s uk-text-center" uk-grid uk-lightbox="animation: scale">
      <% if @project.proj_attachments.empty? %>
      <% else %>
    <% @project.proj_attachments.each do |pic| %>
    <div class="uk-cover-container">
  <%= link_to pic.image.url do %>
          <div class="uk-height-small uk-width uk-background-cover" style="overflow: hidden; background: url('<%= pic.image.url %>') no-repeat center center; background-size: cover; height: 250px;" >
</div>
  <% end %>
</div>
<% end %>
<% end %>
  </div>
<!-- #END IMAGES DISPLAY GRID --->
<p class="uk-text-center">
  <%if @project.proj_startdate.blank? || @project.proj_enddate.blank? %>
  <% else %>
      <%= @project.proj_startdate %> | <%= @project.proj_enddate %>
 <% end %>
</p>
</div>
<!-- #END IMAGES DISPLAY GRID --->
<!-- #START TEAM STUFF --->
<% if @project.teams %>
<div class="uk-background-muted uk-height-auto uk-padding-small uk-margin-medium-top uk-clearfix uk-height-medium">
<div class="uk-column-1-2@s uk-margin-small-top">
<%= link_to projects_path, class: "uk-link-text uk-padding-small uk-margin-auto-right uk-margin-auto-left uk-padding-remove-bottom" do %>
<div>
<span uk-icon="icon: album; ratio: 2;"></span> Projects
</div>
<% end %>
</div>
</div>
<% else %>
<div class="uk-background-muted uk-height-auto uk-padding-small uk-clearfix uk-child-width-1-2@m uk-grid-small uk-grid-match" uk-grid>
<div class="">
  <%= link_to team_path(@project.team), class: "uk-link-text" do %>
<div class="uk-child-width-expand@s">
<%= image_tag( @project.team.cover.url,  alt: 'Team', width: 80) if @project.team.cover? %>
  <span class="uk-text-lead uk-text-capitalize"><%= @project.team.tm_name %> </span>
</div>
<% end %> 
</div>
  <div class="uk-margin-auto-left uk-margin-auto-right">
      <ul class="uk-iconnav">
<%= link_to projects_path do %>
 <li uk-icon="icon: arrow-left; ratio: 2"></li> 
 <% end %>
<%= link_to edit_project_path(@project) do %> 
 <li uk-icon="icon: file-edit; ratio: 2"></li> 
 <% end %>
<%= link_to @project, method: :delete, data: { confirm: 'Are you sure?' } do %>
 <li uk-icon="icon: trash; ratio: 2"></li> 
 <% end %>
</ul>
</div>
</div>
<% end %>
<!-- #END TEAM STUFF --->
 <%= render "shared/projects/bottom_page" %>

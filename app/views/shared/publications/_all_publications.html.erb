<!-- #START CONDICTION --> 
    <% if @publications.empty? %>
    <div class="uk-text-center uk-width-1-1 uk-height-medium">
      <h3 class="uk-light">No publications here</h3>
    </div> 
    <% else %>
<!-- #START EACH PUBLICATION -->
    <% @publications.each do |publication| %>
    <script type="text/javascript">
  var ImageArray = [<% publication.publication_attachments.each do |pic| %>'<%= pic.image.url %>',<% end %> ];
$( "<style type=\'text/css\'>div.bg-img_<%= publication.id %> { background: #f8f8f8 url(" + ImageArray[Math.floor(Math.random() * ImageArray.length)] + ") no-repeat; background-size: cover;}</style>").appendTo( "head" );
</script>
<!-- #START CONTENT LINK -->
      <%= link_to publication_url(id: publication), class: 'uk-inline-clip uk-transition-toggle' do %>
    <div id="bgimg" class="bg-img_<%= publication.id %> uk-tile" style="height: 250px; overflow: hidden;">
    <div class="uk-transition-slide-bottom uk-position-cover uk-overlay uk-overlay-primary ">
      <h3 class="uk-card-title uk-light"><%= publication.pub_title %></h3>
        <span uk-overlay-icon></span>
        <p class="uk-article-meta uk-light">
      <%= publication.pub_date %></p>
     </div>
     </div>
    <% end %>
<!-- #END CONTENT LINK -->
    <% end %>
<!-- #END EACH PUBLICATION-->
    <% end %>
<!-- #END CONDICTION -->
 <!-- #START CONDICTION --> 
    <% if @collections.empty? %>
    <div class="uk-text-center uk-width-1-1 uk-height-medium">
      <h3 class="uk-light">No collection yet</h3>
    </div> 
    <% else %>
    <div class="uk-text-center uk-width-1-1">
    <h5 class="uk-text-center uk-text-capitalize uk-text-muted uk-padding-remove-top uk-margin-remove">Collections from projects</h5> 
</div>
<!-- #START EACH PROJECT -->
    <% @collections.each do |col| %>
<!-- #START CONTENT LINK --> 
      <%= link_to collection_url(id: col.id, pg: :collections), class: 'uk-inline-clip uk-transition-toggle' do %>
    <div id="bgimg" class="bg-img_<%= col.id %> uk-tile" style="height: 250px; overflow: hidden; background: url(<%= col.coll_cover %>); no-repeat center center; background-size: cover; background-color: #f8f8f8;">
    <div class="uk-transition-slide-bottom uk-position-cover uk-overlay uk-overlay-primary ">
      <h3 class="uk-card-title uk-light"><%= col.coll_title %></h3>
        <span uk-overlay-icon></span>
        <p class="uk-article-meta uk-light">
  <!--% if project.proj_startdate || project.proj_enddate %>
      released between < %= project.proj_startdate %> and < %= project.proj_enddate %></p-->
     </div>
     </div>
    <% end %>
<!-- #END CONTENT LINK -->
    <% end %>
<!-- #END EACH PROJECT -->
    <% end %>
<!-- #END CONDICTION -->
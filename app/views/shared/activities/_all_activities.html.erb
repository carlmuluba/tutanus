 <% if @activities.empty? %>
    <div class="uk-text-center uk-width-1-1 uk-height-small">
      <h3 class="uk-light">No activities available</h3>
    </div>
    <% else %>
<!-- #START DIPLAY LIST -->
    <% @activities.each do |activity| %>
    <script type="text/javascript">
  var ImageArray = [<% activity.activity_attachments.each do |pic| %>'<%= pic.image.url %>',<% end %> ];
$( "<style type=\'text/css\'>div.bg-img_<%= activity.id %> { background:  url(" + ImageArray[Math.floor(Math.random() * ImageArray.length)] + ") no-repeat center center; background-size: cover; background-color: #f8f8f8; }</style>").appendTo( "head" );
</script>
<!-- #START CONTENT LINK -->
      <%= link_to activity_url(id: activity, pg: :activities), class: 'uk-inline-clip uk-transition-toggle' do %>
    <div id="bgimg" class="bg-img_<%= activity.id %> uk-tile" style="height: 250px; overflow: hidden;">
    <div class="uk-transition-slide-bottom uk-position-cover uk-overlay uk-overlay-primary ">
      <h3 class="uk-card-title uk-light"><%= activity.act_name %></h3>
        <span uk-overlay-icon></span>
        <p class="uk-article-meta uk-light">
  <% if activity.act_date %>
      Date <%= activity.act_date %></p>
  <% else %>
  <!-- if empty nothing to show -->
  <% end %>
     </div>
     </div>
    <% end %>
<!-- #END CONTENT LINK -->
    <% end %>
<!-- #END EACH PROJECT -->
    <% end %>
<!-- #END CONDICTION -->